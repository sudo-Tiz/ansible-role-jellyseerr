[Unit]
Description=Jellyseerr ({{ jellyseerr_identifier }})
{% for service in jellyseerr_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in jellyseerr_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ jellyseerr_container_stop_grace_time_seconds }} {{ jellyseerr_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ jellyseerr_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
			--rm \
			--name={{ jellyseerr_identifier }} \
			--log-driver=none \
			--user={{ jellyseerr_uid }}:{{ jellyseerr_gid }} \
			--cap-drop=ALL \
			--read-only \
			--network={{ jellyseerr_container_network }} \
			{% if jellyseerr_container_http_bind_port %}
			-p {{ jellyseerr_container_http_bind_port }}:{{ jellyseerr_container_http_port }} \
			{% endif %}
			--env-file={{ jellyseerr_base_path }}/env \
			--label-file={{ jellyseerr_base_path }}/labels \
			--mount type=bind,src={{ jellyseerr_data_path }},dst=/app/config \
			{% for volume in jellyseerr_container_additional_volumes %}
			--mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options | default('') else '' }} \
			{% endfor %}
			{% for arg in jellyseerr_container_extra_arguments %}
			{{ arg }} \
			{% endfor %}
			{{ jellyseerr_container_image }}

{% for network in jellyseerr_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ jellyseerr_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ jellyseerr_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ jellyseerr_container_stop_grace_time_seconds }} {{ jellyseerr_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ jellyseerr_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ jellyseerr_identifier }}

[Install]
WantedBy=multi-user.target
